{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**", // Include tutte le sottocartelle del progetto
                "C:/vcpkg/vcpkg/installed/x64-windows/include", // Percorso generale degli header di Boost e delle altre librerie installate con vcpkg
                "C:/vcpkg/vcpkg/installed/x64-windows/include/amqpcpp", // Header di AMQP-CPP (se necessario)
                "C:/vcpkg/vcpkg/installed/x64-windows/include/curl", // Header di libcurl (se necessario)
                "C:/vcpkg/vcpkg/installed/x64-windows/include/nlohmann", // Header di JSON (se necessario)
                "C:/vcpkg/vcpkg/installed/x64-windows/include/boost" // Aggiunto il percorso specifico di Boost (se necessario)
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "C:/path/to/your/compiler/gcc.exe", // Modifica con il percorso effettivo del tuo compilatore (GCC o G++)
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "windows-gcc-x64"
        }
    ],
    "version": 4
}

